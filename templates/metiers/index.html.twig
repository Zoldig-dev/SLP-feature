{% extends 'base.html.twig' %}

{% block title %}Nos Métiers{% endblock %}

{% block body %}

    {% include "metiers/navMetiers.html.twig" %}

    <section class="logistique column justify-c align-c active" id="Logistique">
        {% include "metiers/logistique.html.twig" %}
    </section>

    <section 
        class="signaletique column justify-c align-c"
        id="Signalétique"
        style="background: no-repeat url('uploads/images/Bloc/{{ signaletique.backgroud }}') center;background-blend-mode: darken;background-size:cover ;background-color: rgba(0,0,0,0.6);"
