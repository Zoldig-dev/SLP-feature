        style="background: no-repeat url('uploads/images/Bloc/{{ transport.backgroud }}') center;background-blend-mode: darken;background-size:cover ;background-color: rgba(0,0,0,0.6);"
    >
        {% include "metiers/transport.html.twig" %}
