{{ form_start(form, {'attr' : {
    'class' : 'contactForm center flex column p-2'
}}) }}
<h3 class="center pb-2">FORMULAIRE DE CONTACT</h3>
<div class="contactForm-item flex column">
    {{ form_label(form.isContact) }}
    {{ form_widget(form.isContact) }}
</div>
<div class="contactForm-item flex column">
    {{ form_widget(form.societyName) }}
</div>
<div class="contactForm-item flex justify-sb">
    {{ form_widget(form.firstName) }}
    {{ form_widget(form.lastName) }}
</div>
<div class="contactForm-item flex justify-sb">
    {{ form_widget(form.email) }}
    {{ form_widget(form.phone) }}
</div>
<div class="contactForm-item flex column">
{#    {{ form_label(form.text) }}#}
    {{ form_widget(form.text) }}
</div>
{{ form_widget(form.submit, {'attr': {
    'class' : 'contactForm-btn bold'
}}) }}
{{ form_end(form) }}